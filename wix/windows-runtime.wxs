<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="Windows Swift Runtime" Language="1033" Version="0.0.0.0" Manufacturer="dt.compnerd.org" UpgradeCode="bed47738-52ef-4af7-a47b-b81cf238e0c8">
    <Package Compressed="yes" InstallScope="perMachine" Manufacturer="dt.compnerd.org" Description="Windows Swift Runtime" Comments="Copyright 2019 Saleem Abdulrasool &lt;compnerd@compnerd.org&gt;" />
    <!--
    NOTE(compnerd) use the pre-3.8 schema for better compatibility.  If we
    are guaranteed WIX 3.8+ we could write this as:

    <MediaTemplate EmbedCab="yes" />
    -->
    <Media Id="1" Cabinet="WindowsRuntimeAMD64.cab" EmbedCab="yes" />

    <!-- Directory Structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="WINDOWSVOLUME">
        <Directory Id="LIBRARY" Name="Library">
          <Directory Id="SWIFT" Name="Swift">
            <Directory Id="VERSION" Name="Current">
              <Directory Id="BIN" Name="bin">
              </Directory>
            </Directory>
          </Directory>
        </Directory>
      </Directory>
    </Directory>

    <SetDirectory Id="WINDOWSVOLUME" Value="[WindowsVolume]" />

    <!-- Components -->
    <DirectoryRef Id="BIN">
      <Component Id="WINDOWS_SWIFT_RUNTIME" Guid="f6fc8d9b-1931-46b3-9701-534f21862a62">
        <File Id="BLOCKSRUNTIME_DLL" Source="$(var.SDK_ROOT)\usr\bin\BlocksRuntime.dll" />
        <File Id="DISPATCH_DLL" Source="$(var.SDK_ROOT)\usr\bin\dispatch.dll" />
        <File Id="FOUNDATION_DLL" Source="$(var.SDK_ROOT)\usr\bin\Foundation.dll" />
        <File Id="FOUNDATIONNETWORKING_DLL" Source="$(var.SDK_ROOT)\usr\bin\FoundationNetworking.dll" />
        <File Id="FOUNDATIONXML_DLL" Source="$(var.SDK_ROOT)\usr\bin\FoundationXML.dll" />
        <File Id="SWIFTCORE_DLL" Source="$(var.SDK_ROOT)\usr\bin\swiftCore.dll" />
        <File Id="SWIFTDISPATCH_DLL" Source="$(var.SDK_ROOT)\usr\bin\swiftDispatch.dll" />
        <!-- <File Id="SWIFTDEMANGLE_DLL" Source="$(var.SDK_ROOT)\bin\swiftDemangle.dll" /> -->
        <File Id="SWIFTMSVCRT_DLL" Source="$(var.SDK_ROOT)\usr\bin\swiftMSVCRT.dll" />
        <File Id="SWIFTREMOTEMIRROR_DLL" Source="$(var.SDK_ROOT)\usr\bin\swiftRemoteMirror.dll" />
        <File Id="SWIFTSWIFTONONESUPPORT_DLL" Source="$(var.SDK_ROOT)\usr\bin\swiftSwiftOnoneSupport.dll" />
        <File Id="SWIFTWINSDK_DLL" Source="$(var.SDK_ROOT)\usr\bin\swiftWinSDK.dll" />

        <File Id="PLUTIL_EXE" Source="$(var.SDK_ROOT)\usr\bin\plutil.exe" />
      </Component>

      <?ifdef $(var.INCLUDE_DEBUG_INFO) ?>
      <Component Id="WINDOWS_SWIFT_RUNTIME_DEBUGINFO" Guid="c74899fe-1d0c-48ac-bc74-505102e865ad">
        <File Id="BLOCKSRUNTIME_PDB" Source="$(var.SDK_ROOT)\usr\bin\BlocksRuntime.pdb" />
        <File Id="DISPATCH_PDB" Source="$(var.SDK_ROOT)\usr\bin\dispatch.pdb" />
        <File Id="FOUNDATION_PDB" Source="$(var.SDK_ROOT)\usr\bin\Foundation.pdb" />
        <File Id="FOUNDATIONNETWORKING_PDB" Source="$(var.SDK_ROOT)\usr\bin\FoundationNetworking.pdb" />
        <File Id="FOUNDATIONXML_PDB" Source="$(var.SDK_ROOT)\usr\bin\FoundationXML.pdb" />
        <File Id="SWIFTCORE_PDB" Source="$(var.SDK_ROOT)\usr\bin\swiftCore.pdb" />
        <File Id="SWIFTDISPATCH_PDB" Source="$(var.SDK_ROOT)\usr\bin\swiftDispatch.pdb" />
        <!-- <File Id="SWIFTDEMANGLE_PDB" Source="$(var.SDK_ROOT)\bin\swiftDemangle.pdb" /> -->
        <File Id="SWIFTMSVCRT_PDB" Source="$(var.SDK_ROOT)\usr\bin\swiftMSVCRT.pdb" />
        <File Id="SWIFTREMOTEMIRROR_PDB" Source="$(var.SDK_ROOT)\usr\bin\swiftRemoteMirror.pdb" />
        <File Id="SWIFTSWIFTONONESUPPORT_PDB" Source="$(var.SDK_ROOT)\usr\bin\swiftSwiftOnoneSupport.pdb" />
        <File Id="SWIFTWINSDK_PDB" Source="$(var.SDK_ROOT)\usr\bin\swiftWinSDK.pdb" />

        <File Id="PLUTIL_PDB" Source="$(var.SDK_ROOT)\usr\bin\plutil.pdb" />
      </Component>
      <?endif ?>
    </DirectoryRef>

    <DirectoryRef Id="TARGETDIR">
      <Component Id="ENV_VARS" Guid="879f2029-84e0-4c64-9595-c11c499ff340">
        <Environment Id="PATH" Action="set" Name="PATH" Part="last" Permanent="no" System="yes" Value="[INSTALLDIR]\Library\Swift\Current\bin" />
      </Component>
    </DirectoryRef>

    <!-- Feature -->
    <Feature Id="RUNTIME" Level="1">
      <ComponentRef Id="WINDOWS_SWIFT_RUNTIME" />
      <ComponentRef Id="ENV_VARS" />
    </Feature>

    <?ifdef $(var.INCLUDE_DEBUG_INFO) ?>
    <Feature Id="DEBUGINFO" Level="0">
      <Condition Level="1">INSTALL_DEBUGINFO</Condition>
      <ComponentRef Id="WINDOWS_SWIFT_RUNTIME_DEBUGINFO" />
    </Feature>
    <?endif ?>

    <!-- UI -->
    <UI />
  </Product>
</Wix>
